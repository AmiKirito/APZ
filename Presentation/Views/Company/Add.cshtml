@model CompanyCreateViewModel
@inject UserManager<User> userManager
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Title"];
}
<h1>@ViewBag.Title</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="AssignedUser" class="col-sm-2 col-form-label">@Localizer["AssignedUser"]</label>
            <div class="col-sm-10">
                <select asp-for="AssignedUser" class="custom-select">
                    <option selected disabled>@Localizer["SelUser"]</option>
                    @foreach (var user in userManager.Users)
                    {
                        <option>@user.UserName</option>
                    }
                </select>
                <span asp-validation-for="AssignedUser" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label">@Localizer["ComTitle"]</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" placeholder="@Localizer["EntTitle"]" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Country" class="col-sm-2 col-form-label">@Localizer["Country"]</label>
            <div class="col-sm-10">
                <select asp-for="Country" class="custom-select">
                    <option selected disabled>@Localizer["ChoCountry"]</option>
                    @foreach (var coutry in Model.Countries)
                    {
                        <option>@coutry</option>
                    }
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Town" class="col-sm-2 col-form-label">@Localizer["Town"]</label>
            <div class="col-sm-10">
                <input asp-for="Town" class="form-control" placeholder="@Localizer["EntTown"]" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label">@Localizer["Description"]</label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" placeholder="@Localizer["EntDesc"]" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">@Localizer["AddCompany"]</button>
</form>