@model CreateSurveyViewModel
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["Title"];
}

<form enctype="multipart/form-data" asp-controller="Survey" asp-action="Add" method="post" class="mt-3">
    <input hidden asp-for="Username" value="@User.Identity.Name" />
    <span asp-validation-for="Username" class="text-danger"></span>
    <div class="form-group row">
        <label asp-for="CompanyName" class="col-sm-2 col-form-label">@Localizer["CompTitle"]</label>
        <div class="col-sm-10">
            <select asp-for="CompanyName" class="custom-select">
                <option selected>@Model.CompanyName</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Content" class="col-sm-2 col-form-label">@Localizer["ContLable"]</label>
        <div class="col-sm-10">
            <textarea asp-for="Content" class="form-control" placeholder="@Localizer["Content"]"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["AddSur"]</button>
</form>